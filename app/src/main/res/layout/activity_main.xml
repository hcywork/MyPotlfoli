<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.hecaiyang.mypotlfoli.MainActivity">

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:text="My first app!"
        android:textColor="#376479"
        android:textSize="26sp" />

    <Button
    android:id="@+id/spoitfy_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/title_text_view"
    android:gravity="center"
    android:layout_centerHorizontal="true"
    android:background="#ffbb44"
    android:text="Spoitfy Streamer"
    android:padding="@dimen/activity_vertical_margin"
    />
    <Button
        android:id="@+id/spoitfy_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spoitfy_button"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#ffbb44"
        android:text="Spoitfy Streamer"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/library_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spoitfy_app_button"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#ffbb44"
        android:text="Spoitfy Streamer"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/bundle_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/library_app_button"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#ffbb44"
        android:text="Spoitfy Streamer"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/xyz_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bundle_app_button"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#ffbb44"
        android:text="Spoitfy Streamer"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        />
    <Button
        android:id="@+id/My_on_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/xyz_app_button"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:background="#ea2334"
        android:text="Spoitfy Streamer"
        android:layout_marginTop="10dp"
        android:padding="@dimen/activity_vertical_margin"
        />

</RelativeLayout>
